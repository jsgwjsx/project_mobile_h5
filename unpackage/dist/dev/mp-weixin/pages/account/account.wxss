.page {
  background: #f0f0f0;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.page .user {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 150rpx;
  background: #fff;
  width: 750rpx;
}
.page .user .avatar {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  margin-left: 25rpx;
  margin-right: 20rpx;
}
.page .user text {
  display: block;
  font-size: 16px;
  flex-grow: 1;
}
.page .user .scan {
  width: 120rpx;
  background: #D8B774;
  border-radius: 30rpx 0% 0% 30rpx;
  box-sizing: border-box;
  padding-left: 20rpx;
  height: 60rpx;
  align-items: center;
  display: flex;
}
.page .user .scan:active {
  background: #9e8655;
}
.page .user .scan image {
  height: 50rpx;
  width: 50rpx;
}
.page .card {
  display: flex;
  flex-wrap: wrap;
  width: 700rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
}
.page .card .title {
  width: 100%;
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.page .card .item {
  display: flex;
  color: #50525A;
  flex-direction: column;
  align-items: center;
  width: 165rpx;
  height: 150rpx;
  justify-content: center;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}
.page .card .item:active {
  background: #f0f0f0;
}
.page .card .item image {
  width: 70rpx;
  height: 70rpx;
  margin-bottom: 10rpx;
}
.page .card .item text {
  font-size: 12px;
}

